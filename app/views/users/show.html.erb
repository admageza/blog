<div class="container" style="margin-top:30px">
  <div class="row">
    <div class="col-sm-4">
      <%= image_tag @user.image_url, :class => "imgsize" %>
    </div>
    <div class="col-sm-4">
      <center><br><h1>Welcome, <%= current_user.name %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button type="button" class="btn btn-outline-primary"><%= link_to 'Edit Profile', user_path(current_user.id) %></button></h1>
          <h3>This is &nbsp;<%= current_user.name %>'s page</h3>
          <p>email address: <%= current_user.email %></p>
          <table>
            <% @user ||= current_user %>
          <div class="stats">
            <th><a href="<%= user_path(@user.id) %>">
              <strong id="followers" class="stat">
                <%= @user.articles.count %>
              </strong>
                Posts
               </a>
            </th>
          </div>
          </table>
          
          <table>
            <% @user ||= current_user %>
          <div class="stats">
            <th><a href="<%= user_path(@user.id) %>">
              <strong id="followers" class="stat">
                <%= @user.favorites.count %>
              </strong>
                Favorites
               </a>
            </th>
          </div>
          </table>
        </center>
    </div>
  </div>
</div>



<div class="container">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">My POSTS</a></li>
    <li><a data-toggle="tab" href="#menu1">FAVORITE</a></li>
    <li><a data-toggle="tab" href="#menu2">IGTV</a></li>
    <li><a data-toggle="tab" href="#menu3">SAVED</a></li>
  </ul>
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <div class="tab-content text-center">
    <div id="home" class="tab-pane fade in active">
      <div class="row slideanim">
    <% @user.articles.each do |article| %>
      <div class="col-sm-12 ">
       <ur>
        <li><%= image_tag @articles.image_url, :class => "logo" %></li>
        <li><%= article.title %></li>
        <li><%= article.text %></li>
       </ur>
      </div>
    <% end %>
  </div>
    </div>
    <div id="menu1" class="tab-pane fade">
      <div class="row slideanim">
  <% @favorites_articles.each do |article| %>
   <div class="col-sm-4 "> 
    <ur>
       <li><%= image_tag @articles.image_url, :class => "logo" %></li>
       <li><%= article.title %></li>
       <li><%= article.text %></li>
     </ur>
    </div>
    <% end %>
  </div>
    </div>
    <div id="menu2" class="tab-pane fade">
      <h3>Start Sharing to IGTV</h3>
      <p>Create your channel to start sharing longer vertical videos with your Instagram audience.</p>
      <button type="button" class="btn btn-outline-primary"><%= link_to 'Get Started', user_path(current_user.id) %></button>
    </div>
    <div id="menu3" class="tab-pane fade">
      <h3>SAVED PECTURES ARE STORED HERE</h3>
      <p>Coming soon!</p>
    </div>
  </div>
</div>




